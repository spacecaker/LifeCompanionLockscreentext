<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:orientation="vertical" >

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="1dp" >
    <TextView
        android:id="@+id/Owner"
        android:layout_width="0.0dp"
        android:layout_height="0.0dip"/>    
    <View android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ff344f60"
        android:layout_alignParentBottom="true"         />
</RelativeLayout>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout android:id="@+id/linear_layout1"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:orientation="vertical"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="5dp">
        <TextView android:text="@string/life_companion_text"
            android:textColor="#ff344f60"
            android:textSize="15.0sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="28.0dip"
            android:gravity="center_vertical"/>
        <View android:background="#ff344f60"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />
    </LinearLayout>    
    <LinearLayout android:id="@+id/layout2"
        android:layout_below="@+id/linear_layout1"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:orientation="horizontal"
        android:paddingTop="5.0dip">
        <EditText android:id="@+id/name_field"
            android:layout_width="0.0dp"
            android:layout_marginLeft="15.0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="Enter Companion Name"
            android:layout_weight="1.0"/>
        <ImageView android:src="@drawable/done"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginRight="15.0dip"
            android:layout_alignParentRight="true"/>        
    </LinearLayout>
    
</RelativeLayout>
</LinearLayout>